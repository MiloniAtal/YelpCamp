<%- include("../partials/header") %>

<div class="container">

	<div class="row ">
		<h1 class="text-center">
			Create a New Comment <%=  campground.name %>
		</h1>
		<div style="width: 30%; margin: 25px auto">
			<form action="/campgrounds/<%= campground._id %>/comments" method="POST">
				<input class="form-control form-group" type="text" placeholder="text" name="comment[text]">
				<input class="btn btn-lg btn-default btn-block form-group btn-primary" type="Submit">
			</form>
			<a href="/campgrounds" >Go back!</a>		
		</div>

	</div>

</div>

