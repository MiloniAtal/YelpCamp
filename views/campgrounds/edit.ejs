<%- include("../partials/header") %>

<div class="container">

	<div class="row ">
		<h1 class="text-center">
			Edit <%= campground.name %>
		</h1>
		<div style="width: 30%; margin: 25px auto">
			<form action="/campgrounds/<%= campground._id %>?_method=PUT" method="POST">
				<input class="form-control form-group" type="text" value="<%=campground.name%>" name="campground[name]">
				<input class="form-control form-group" type="text" value="<%= campground.image %>" name="campground[image]">
				<input class="form-control form-group" type="text" value="<%= campground.description %>" name="campground[description]">
				<input class="btn btn-lg btn-default btn-block form-group btn-primary" type="Submit">
			</form>
			<a href="/campgrounds" >Go back!</a>		
		</div>

	</div>

</div>

<%- include("../partials/footer") %>